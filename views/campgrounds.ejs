<%- include("partials/header") %>



<div class="container">
	<div class="jumbotron">
		<div class="row">
		<div class="col-lg-6 col-md-6" >
			<h1> Welcome to <br>YelpCamp ! </h1>
			<h4> Yelp camp features the most exciting camping sites from India and across </h4>
		</div>
		<div class="col-lg-6 col-md-6" style="text-align: center">
			<h2> Add a new camp </h2><br>
			<form action="/" method="POST">
				<input type="text" name="name" placeholder="Camp Name"><br><br>
				<input type="text" name="image" placeholder="ImageURL "><br><br>
				<input type="textarea" name="description" placeholder="Desciption goes here"><br><br>
				<button> ADD </button>
			</form>
			
		</div>
		</div>
	</div>
	<h3> Below are our top choices </h3>
	<div class="row" style="display: flex; flex-wrap:wrap;">
		<% campgrounds.forEach(function(campground){ %>
	  		<div class="col-md-3 col-sm-6">
	  			<div class="thumbnail" style="width: 250px;" >
	    			<img src="<%=campground.image%>">
	      			<div class="caption">
	        		<h3><%=campground.name%></h3>
	        		</div>
	        		<p><a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>  </p>
	        	</div>
	        </div>
	    <% }) %>
		

	</div>

</div>



<%- include("partials/footer") %>